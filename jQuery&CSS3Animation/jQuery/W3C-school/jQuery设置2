<!doctype html>
<html>
  <head>
    <title>jQuery设置2</title>
    <meta charset="UTF-8">
    <style></style>
    <script src="jQuery_v3.3.1.js"></script>
    <script>
        $(document).ready(function (){
            $("#btn1").click(function (){
                $("#text1").text(function (i, origText){
                    return "旧文本：" + origText + "新文本:hello world! (index: " + i + ")";
                });
            });
            
            $("#btn2").click(function (){
            
                $("#text2").html(function (i, oldHtml){
                    return "旧文本：" + oldHtml + "新文本：<b>hello world!</b> （index： " + i + "）";
                });
            });
        });
    </script>
  </head>
  <body>
    <p id="text1">这里有一个<b>粗体</b>文本</p>
    <p id="text2">这里有另一个<b>粗体</b>文本</p>
    
    <button id="btn1">显示新/旧文本</button>
    <button id="btn2">显示新/旧html</button>
  </body>
</html>
