<html>
  <head>
    <title>隐藏与显示</title>
    <meta content="">
    <meta charset="UTF-8">
    <style>
        #box{
            position: relative;
            width: 200px;
            height: 220px;
            margin: 0 auto;
            text-align: center;
        }
        #div1{
            width: 200px;
            height: 200px;
            background: #3c0;
        }
        input{
            position: absolute;
            top: 220px;
        }
        #btn1{
            left: 0;
        }
        #btn2{
            left: 65px;
        }
        #btn3{
            left: 130px;
        }
    </style>
    <script src="jQuery_v3.3.1.js"></script>
    <script>
        $(document).ready(function (){
            $("#btn2").click(function (){
                $("#div1").hide(1000);
            });
            $("#btn1").click(function (){
                $("#div1").show(1000);
            });
            $("#btn3").click(function (){
                $("#div1").toggle(1000);
            });
        });
    </script>
  </head>
  <body>
    <div id="box">
        <div id="div1"></div>
        <input type="button" id="btn1" value="显示"/>
        <input type="button" id="btn2" value="隐藏"/>
        <input type="button" id="btn3" value="显示隐藏"/>
    </div>
  </body>
