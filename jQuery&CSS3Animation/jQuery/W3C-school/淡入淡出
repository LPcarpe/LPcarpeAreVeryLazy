    <script>
        $(document).ready(function(){
            $("#btn1").click(function (){
                $("#div1").fadeIn();
            });
            $("#btn2").click(function (){
                $("#div1").fadeOut();
            });
            $("#btn3").click(function (){
                $("#div1").fadeToggle(1000);
            });
