        $(document).ready(function (){
            $("#btn1").click(function (){
                alert("Text: " + $("#test").text());
            });
            $("#btn2").click(function (){
                alert("Text: " + $("#test").html());
            });
            $("#btn3").click(function (){
                alert("Text: " + $("#input1").val());
            });
            $("#btn4").click(function (){
                alert("Text: " + $("a").attr("href"));
            });
        }); 
    </script>
