<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        #image{
            display: inline-block;
            width: 150px;
            height: 45px;
            background-color: #3c0;
        }
    </style>
    <script src="jQuery_v3.3.1.js"></script>
    <script>
        $(document).ready(function (){
            $("#btn1").click(function (){
                $("#image").before("<b>之前</b>");
            });
            
            $("#btn2").click(function (){
                $("#image").after("<i>之后</i>");
            });
        });
    </script>
</head>
<body>
    <div id="image"></div>
    <br/><br/>
    <button id="btn1">之前插入</button>
    <button id="btn2">之后插入</button>
</body>
